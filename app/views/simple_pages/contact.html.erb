<h1>Contact Me</h1>

<%= flash[:notice] %>

<%= form_with(url:"/simple_pages/thank_you", id:"contactform", method: "post", local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
    </div>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
    </div>
    <div class="form-group">
      <%= form.label :message %>
      <%= form.text_field :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
    </div>
  </div> <!--row-->
  <%= form.submit "Send", class: "btn btn-default btn-primary"%>
<% end %>
