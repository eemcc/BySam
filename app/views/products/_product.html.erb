
<div class="carousel-item <%= "active" if product == @products.first %>">
  <%= image_tag(product.image_url, class: "img-fluid") %>
  <div class="carousel-caption d-none d-md-block">
    <h2><%= product.name %></h2>
    <p><%= product.description %></p>
    <p>$ <%= product.price %></p>
  </div> <!--caption-->
</div> <!--item-->
