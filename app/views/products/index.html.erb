
<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <div class="container-fluid">
    <div class=row>
        <% @products.each do |product| %>
        <div class= "col-md-4 col-s-12" id="items">
          <%= image_tag(product.image_url, class: "img-fluid") %>
          <h2><%= product.name %></h2>
          <p><%= product.description %></p>
          <p><%= product.color %></p>
          <p><%= product.price %></p>
          <span><%= link_to 'Show', product %></span>
          <span><%= link_to 'Edit', edit_product_path(product) %></span>
          <span><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></span>
        </div> <!--column-->
        <% end %>
    </div> <!--row-->
  </div> <!--container-->
</table>

